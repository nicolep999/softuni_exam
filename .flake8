[flake8]
max-line-length = 100

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    .pytest_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info

# Ignore specific error codes (only the most minor ones)
ignore = 
    F541,
    F811

# Show source code for each error
show-source = True

# Show statistics
statistics = True

# Count errors
count = True

# Output format
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s 